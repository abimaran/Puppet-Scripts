define planfile ($user = $title, $content) {
file {"/home/${user}/.plan":
ensure => file,
content => $content,
mode => 0644,
owner => $user,
}
}

planfile {'nick':
content => "Working on new Learning Puppet chapters. Tomorrow: upgrading
the LP virtual machine.",
}

